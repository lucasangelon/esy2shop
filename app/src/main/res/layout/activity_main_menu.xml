<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="codefactory.esy2shop.activites.MainMenu"
        android:id="@+id/activity_main_layout">



        <RelativeLayout
            android:id="@+id/PLACEHOLDER"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REFINE"
                android:id="@+id/refineCategoryBtn"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/storeActiveBtn"
                android:checked="false"
                android:layout_above="@+id/refineCategoryBtn"
                android:layout_toLeftOf="@+id/refineStoreBtn"
                android:layout_toStartOf="@+id/refineStoreBtn" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TEMPCategorySpinner"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/refineCategoryBtn"
                android:layout_toStartOf="@+id/refineCategoryBtn"
                android:layout_alignTop="@+id/refineCategoryBtn" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TEMPStoreSpinner"
                android:layout_above="@+id/TEMPCategorySpinner"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/storeActiveBtn"
                android:layout_toStartOf="@+id/storeActiveBtn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REFINE"
                android:id="@+id/refineStoreBtn"
                android:layout_above="@+id/refineCategoryBtn"
                android:layout_alignRight="@+id/refineCategoryBtn"
                android:layout_alignEnd="@+id/refineCategoryBtn" />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New List"
            android:id="@+id/newList"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/PLACEHOLDER"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainListView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/newList"
            android:layout_above="@+id/ADVERTISEMENT_PLACEHOLDER" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ADVERTISEMENT_PLACEHOLDER" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_main">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>


    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:choiceMode="singleChoice"
        android:background="#ffeeeeee"/>




</android.support.v4.widget.DrawerLayout>

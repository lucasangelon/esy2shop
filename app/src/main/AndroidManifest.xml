<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codefactory.projectshop" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="codefactory.esy2shop.activites.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="codefactory.esy2shop.activites.MainMenu"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="codefactory.esy2shop.activites.EditList"
            android:label="@string/title_activity_edit_list"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="codefactory.esy2shop.activites.CopyrightActivity"
            android:label="@string/title_activity_copyright" >
        </activity>
        <activity
            android:name="codefactory.esy2shop.activites.EditStore"
            android:label="@string/title_activity_edit_store"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="codefactory.esy2shop.activites.EditNotification"
            android:label="@string/title_activity_edit_notification"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="codefactory.esy2shop.activites.AboutActivity"
            android:label="@string/title_activity_about">
        </activity>
    </application>

</manifest>
